// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"compounds": [
        {
            "name": "Second Level Dev Rascal",
            "configurations": ["Run Extension (extensions enabled)", "Parametric Server", "Rascal Server"],
            "stopAll": true
        }
    ],
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"env": {
				"RASCAL_LSP_DEV": "true",
				"RASCAL_LSP_DEV_DEPLOY": "false"
			},
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Run Extension (extensions enabled)",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"env": {
				"RASCAL_LSP_DEV": "true"
			},
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/vscode-suite/"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "npm: pretest"
		},
		{
			"type": "java",
			"name": "Rascal Server",
			"request": "launch",
			"mainClass": "org.rascalmpl.vscode.lsp.rascal.RascalLanguageServer",
			"projectName": "rascal-lsp",
			"console": "internalConsole",
			"vmArgs": [
			  "-Dlog4j2.level=TRACE",
			  "-Drascal.compilerClasspath=${workspaceFolder}/target/lib/rascal.jar"
			]
		  },
		  {
			"type": "java",
			"name": "Parametric Server",
			"request": "launch",
			"mainClass": "org.rascalmpl.vscode.lsp.parametric.ParametricLanguageServer",
			"projectName": "rascal-lsp",
			"console": "internalConsole",
			"vmArgs": [
			  "-Dlog4j2.level=TRACE",
			  "-Drascal.compilerClasspath=${workspaceFolder}/target/lib/rascal.jar"
			]
		  }
	]
}
